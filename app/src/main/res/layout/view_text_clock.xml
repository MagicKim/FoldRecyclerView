<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="@dimen/text_clock2_width"
        android:layout_height="@dimen/text_clock2_height"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_clock2_size" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="@dimen/text_clock2_width"
        android:layout_height="@dimen/text_clock2_height"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_clock2_size" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="@dimen/text_clock2_colon_width"
        android:layout_height="@dimen/text_clock2_height"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_clock2_size" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="@dimen/text_clock2_width"
        android:layout_height="@dimen/text_clock2_height"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_clock2_size" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="@dimen/text_clock2_width"
        android:layout_height="@dimen/text_clock2_height"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_clock2_size" />

</LinearLayout>