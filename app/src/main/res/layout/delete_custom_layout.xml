<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/list_delete_all_oval"
            android:src="@drawable/item_icon_delete_all" />

        <Button
            android:id="@+id/bt_del"
            android:layout_width="104dp"
            android:layout_height="45dp"
            android:layout_marginEnd="@dimen/custom_layout_delete_button_end"
            android:background="@drawable/notification_button_selector"
            android:text="清除"
            android:textColor="@color/notify_recycler_view_item_header_normal_color"
            android:textSize="@dimen/list_view_item_header_del" />

</RelativeLayout>