<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/list_delete_all_oval"
        android:src="@drawable/item_icon_delete_all" />

    <Button
        android:id="@+id/bt_del"
        android:layout_width="@dimen/list_view_del_button_width"
        android:layout_height="@dimen/list_view_del_button_height"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/custom_layout_delete_button_end"
        android:background="@drawable/list_delete_all_rounded_shape"
        android:text="清除全部"
        android:textColor="@color/notify_recycler_view_item_header_normal_color"
        android:textSize="@dimen/list_view_item_header_del" />
</RelativeLayout>